@model Property.ViewModels.LoginViewModel
<h2>로그인</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" asp-action="Login" asp-controller="User">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>아이디</label>
                <input type="text" class="form-control" asp-for="UserId" placeholder="아이디를 입력하세요."/>
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                <label>비밀번호</label>
                <input type="password" class="form-control" asp-for="UserPw" placeholder="비밀번호를 입력하세요."/>
                <span class="text-danger" asp-validation-for="UserPw"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">로그인</button>
            </div>
        </form>
    </div>
</div>
