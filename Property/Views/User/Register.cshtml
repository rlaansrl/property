@model Property.Models.User
<h2 id="Body">
    <span>회원가입</span>
</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" asp-controller="User" asp-action="Register">
            <div class="form-group">
                <label>아이디</label>
                <input type="text" asp-for="UserId" class="form-control" />
                <span class="text-danger" asp-validation-for="UserId"></span>
            </div>
            <div class="form-group">
                <label>비밀번호</label>
                <input type="password" class="form-control" asp-for="UserPw" />
                <span class="text-danger" asp-validation-for="UserPw"></span>
            </div>
            <div class="form-group">
                <label>이름</label>
                <input type="text" class="form-control" asp-for="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label>생년월일</label>
                <input type="text" class="form-control" asp-for="UserBirth" />
                <span class="text-danger" asp-validation-for="UserBirth"></span>
            </div>
            <div class="form-group">
                <label>성별</label>
            </div>
            <div class="checkbox">
                <input type="radio" name="gender" value="man" />
                <label class="">남자</label>
                <input type="radio" name="gender" value="woman" />
                <label>여자</label>
            </div>
            <div class="form-group">
                <label>이메일</label>
                <input type="text" class="form-control" asp-for="UserEmail" />
                <span class="text-danger" asp-validation-for="UserEmail"></span>
            </div>
            <div class="form-group">
                <label>휴대폰 번호</label>
                <input type="text" class="form-control" asp-for="UserPhone" />
                <span class="text-danger" asp-validation-for="UserPhone"></span>
            </div>
            <div class="form-group">
                <label>주소</label>
                <input type="text" class="form-control" />
            </div>
            
                <button type="submit" class="btn btn-default">회원가입</button>
                <a href="#" class="btn btn-warning">취소</a>
            
        </form>
    </div>
</div>